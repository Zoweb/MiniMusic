<Window x:Class="MiniMusic.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniMusic.Installer"
        mc:Ignorable="d"
        Title="MiniMusic Installer"
        Width="400" Height="300" ResizeMode="NoResize">
    <Grid Background="{StaticResource GridSplitterBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10px" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Name="Title" Content="Where do you want me to live?" HorizontalAlignment="Left" Margin="10,10,0,10"
               Grid.Row="1" Width="374" />
        <TextBox Name="FileLocation" HorizontalAlignment="Left" Height="23" Margin="10,10,50,10" Grid.Row="2"
                 TextWrapping="Wrap" Text="C:\Program Files\MiniMusic Editor\" VerticalAlignment="Top" Width="324"
                 GotFocus="FileLocation_OnGotFocus" />
        <Button Content="..." HorizontalAlignment="Right" Margin="0,10,10,0" Grid.Row="2" VerticalAlignment="Top"
                Width="35" Click="ButtonBase_OnClick" />
    </Grid>
</Window>